{
  "python.analysis.typeCheckingMode": "basic",
  "python.linting.pylintEnabled": true,
  "python.linting.enabled": false,
  "pylint.args": ["--ignore", "E0402", "--ignore", "C0303"],
  "cSpell.words": [
    "creds",
